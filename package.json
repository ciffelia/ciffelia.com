{
  "name": "ciffelia.com",
  "private": true,
  "author": "Ciffelia <mc.prince.0203@gmail.com> (https://ciffelia.com/)",
  "repository": "github:ciffelia/ciffelia.com",
  "homepage": "https://ciffelia.com/",
  "bugs": "https://github.com/ciffelia/ciffelia.com/issues",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p --aggregate-output --continue-on-error --print-label 'lint:*'",
    "lint:eslint": "eslint --ext .js,.ts,.jsx,.tsx .",
    "lint:stylelint": "stylelint ./src/**/*.{css,scss,js,jsx,ts,tsx}",
    "lint:prettier": "prettier --check .",
    "fix": "run-s --print-label format:eslint format:stylelint format:prettier",
    "fix:eslint": "eslint --ext .js,.ts,.jsx,.tsx --fix .",
    "fix:stylelint": "stylelint ./src/**/*.{css,scss,js,jsx,ts,tsx} --fix",
    "fix:prettier": "prettier --write .",
    "typecheck": "tsc",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fontsource/quicksand": "^4.5.11",
    "modern-normalize": "^1.1.0",
    "next": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-intersection-observer": "^9.4.1",
    "sharp": "^0.31.3",
    "styled-components": "^5.3.6",
    "typescript": "~4.9.4"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-next": "^13.1.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "postcss": "^8.4.21",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.3",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-sass-guidelines": "^9.0.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,yml,yaml,css,md}": "prettier --check",
    "*.{js,ts,jsx,tsx}": "eslint",
    "*.{css,scss,js,ts,jsx,tsx}": "stylelint"
  },
  "packageManager": "yarn@3.3.1"
}
