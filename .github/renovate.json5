{
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  packageRules: [
    {
      matchManagers: ['npm'],
      enabled: false,
      rangeStrategy: 'bump',
    },
    {
      matchManagers: ['npm'],
      matchPackagePatterns: [
        '^yarn$',
        '^@stylelint/',
        '^@types/',
        '^@typescript-eslint/',
        '^eslint',
        '^husky$',
        '^lint-staged$',
        '^npm-run-all$',
        '^pinst$',
        '^prettier$',
        '^stylelint',
      ],
      matchUpdateTypes: ['minor', 'patch'],
      matchCurrentVersion: '!/^0/',
      enabled: true,
      automerge: true,
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
  ],
}
