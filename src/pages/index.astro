---
import HeroSection from "@/components/hero/HeroSection.astro";
import ProfileSection from "@/components/profile/ProfileSection.astro";
import ArticlesSection from "@/components/articles/ArticlesSection.astro";
import SkillsSection from "@/components/skills/SkillsSection.astro";
import WorksSection from "@/components/works/WorksSection.astro";
import "@/styles/global.css";

if (Astro.site === undefined) {
  throw new Error("Astro.site is undefined");
}

const ogUrl = new URL(Astro.url.pathname, Astro.site).toString();
const ogImageUrl = new URL("/favicon.png", Astro.site).toString();
---

<!doctype html>
<html lang="ja" prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="description" content="About me" />
    <meta property="og:title" content="Ciffelia" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:description" content="About me" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:site_name" content="Ciffelia" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ciffelia" />
    <title>Ciffelia</title>
  </head>
  <body>
    <HeroSection />
    <main>
      <ProfileSection />
      <ArticlesSection />
      <SkillsSection />
      <WorksSection />
    </main>
  </body>
</html>
