---
import Section from "@/components/Section.astro";
import InViewEffect from "@/components/InViewEffect.astro";
import { getSortedSkills } from "@/sorted-content";
import SkillCard from "./SkillCard.astro";

const skills = await getSortedSkills();
---

<Section title="Skills" subtitle="スキルセット">
  <ul>
    {
      skills.map((skill) => (
        <li>
          <InViewEffect>
            <SkillCard {skill} />
          </InViewEffect>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 16px;
    padding: 0;
    margin: 0;
  }

  li {
    list-style: none;
  }
</style>
